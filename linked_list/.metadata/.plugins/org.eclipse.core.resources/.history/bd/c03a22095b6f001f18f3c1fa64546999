void AddStudent(const StudentData *const Ptr)
{

	StudentData *temp=NULL;
	temp=(StudentData *)malloc(sizeof(StudentData));
	if (temp==NULL)
	{
		printf("ERROR!! there isn't enough space to add new student\n");
	}
	else if (Head==NULL)
	{
		temp->ID=Ptr->ID;
		temp->Name=Ptr->Name;
		temp->Age=Ptr->Age;
		temp->GPA=Ptr->GPA;
		Head=temp;
	}
	else
	{
		while
	}
}

